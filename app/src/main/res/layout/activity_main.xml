<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF4FF"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- 상단 왼쪽: 관리자 연결 -->
    <TextView
        android:id="@+id/btn_admin"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_red_dot"
        android:contentDescription="admin"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상단 전체를 채우는 래퍼 컨테이너 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_wrapper"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 오른쪽: 언어 토글 (래퍼 안으로 이동) -->
        <LinearLayout
            android:id="@+id/lang_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/btn_kor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한국어"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
            android:background="#1976D2"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/btn_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="#DDE6F5"
                android:textColor="#4A5A6A"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewWeMeet"
            android:layout_width="558dp"
            android:layout_height="34dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:text="본 서비스는 we-meet 수업의 프로젝트 결과물로 만들어졌습니다."
            android:textColor="#2B87F4"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 상단 안내 바 + 마이크 (top_wrapper 아래로 이동) -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="#E3F0FF"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/top_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/mic_circle"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_mic"
            android:background="@drawable/bg_circle_white"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이렇게 말해보세요. 헤이 테미, 부스로 안내해줘."
            android:textColor="#111111"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 하단 전체를 채우는 래퍼 컨테이너 -->

    <!-- bottom_wrapper 추가 -->

    <!-- 캐릭터: 화면 기준 오른쪽 하단 고정 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintVertical_bias="0.0">

        <!-- 메인 컨텐츠 컨테이너: 좌/우 분할 (래퍼 안으로 이동) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="40dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 왼쪽: 길 안내 (큰 카드) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_navi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="24dp"
                app:cardBackgroundColor="#1A7DFF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/right_panel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <ImageView
                        android:layout_width="257dp"
                        android:layout_height="252dp"
                        android:src="@drawable/ic_map" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="길 안내"
                        android:textColor="#FFFFFF"
                        android:textSize="64sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="TEMI가 여러분을 안내해요"
                        android:textColor="#E8F2FF"
                        android:textSize="32sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 오른쪽 전체 패널: 위/아래 구성 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/right_panel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_navi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.46">

                <!-- 위: 사진 찍기 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_photo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="34dp"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.48"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="24dp">

                        <ImageView
                            android:layout_width="129dp"
                            android:layout_height="114dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_gallery" />

                        <LinearLayout
                            android:layout_width="181dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="196dp"
                                android:layout_height="match_parent"
                                android:text="사진 찍기"
                                android:textColor="#243B5A"
                                android:textSize="48sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="TEMI와 사진을 찍어보세요"
                                android:textColor="#243B5A"
                                android:textSize="24sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 아래: 좌/우 카드 묶음 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_row"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_photo">

                    <!-- 좌: 주요 부스 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_booth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toStartOf="@id/card_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="112dp"
                                android:src="@drawable/ic_main_calendar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="주요 부스"
                                android:textColor="#243B5A"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="오늘의 주요행사는 무엇일까요?"
                                android:textColor="#6C7A90"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 우: 메뉴 추천 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_menu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/card_booth"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="115dp"
                                android:layout_height="114dp"
                                android:src="@drawable/ic_main_coffee" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="메뉴 추천"
                                android:textColor="#243B5A"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="오늘은 무엇을 먹을까요?"
                                android:textColor="#6C7A90"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>  <!-- bottom_row -->
            </androidx.constraintlayout.widget.ConstraintLayout>      <!-- right_panel -->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- content_container -->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/character"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_temibot"
        android:elevation="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 관리자 설정 패널 (초기 숨김) -->
        <include
        android:id="@+id/include_admin_panel"
        layout="@layout/panel_admin_mapping"
        android:visibility="gone"/>

    <!-- 길찾기 맵 패널 (초기 숨김) -->
    <include
        android:id="@+id/include_map_panel"
        layout="@layout/panel_map_navigation"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>