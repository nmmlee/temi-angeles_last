<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF4FF"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- 상단 왼쪽: 관리자 연결 -->
    <TextView
        android:id="@+id/btn_admin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_red_dot"
        android:contentDescription="admin"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상단 전체를 채우는 래퍼 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_wrapper"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 오른쪽: Wake Word + 언어 토글 -->
        <LinearLayout
            android:id="@+id/lang_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Wake Word 토글 버튼 -->
            <TextView
                android:id="@+id/btn_wake_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wake_word_button"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="#1976D2"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_kor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한국어"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="#1976D2"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/btn_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="#DDE6F5"
                android:textColor="#4A5A6A"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewWeMeet"
            android:layout_width="700dp"
            android:layout_height="34dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:text="@string/main_wemeet_text"
            android:textColor="#2B87F4"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 상단 안내 바 + 마이크 -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="#E3F0FF"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/top_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/mic_circle"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_mic"
            android:background="@drawable/bg_circle_white"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temi_title"
            android:textColor="#111111"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 하단 전체 래퍼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <!-- 메인 컨텐츠 컨테이너 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="40dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 왼쪽: 길 안내 (1개 큰 카드) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_navi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="#1A7DFF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/right_panel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.41">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="24dp"
                        android:src="@drawable/ic_map" />

                    <TextView
                        android:id="@+id/tv_navi_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_navigation_title"
                        android:textColor="#FFFFFF"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_navi_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/main_navigation_subtitle"
                        android:textColor="#E8F2FF"
                        android:textSize="24sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 오른쪽 패널: 2x2 그리드 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/right_panel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_navi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.56">

                <!-- 위 행: 사진 찍기 + 이벤트 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/top_row"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/bottom_row"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.48">

                    <!-- 사진 찍기 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_photo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="6dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/card_event"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="112dp"
                                android:src="@drawable/ic_gallery" />

                            <TextView
                                android:id="@+id/tv_photo_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/main_photo_title"
                                android:textColor="#243B5A"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_photo_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/main_photo_subtitle"
                                android:textColor="#6C7A90"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 이벤트 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_event"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="6dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintStart_toEndOf="@id/card_photo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="112dp"
                                android:src="@drawable/ic_main_thunder" />

                            <TextView
                                android:id="@+id/tv_event_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/main_event_title"
                                android:textColor="#243B5A"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_event_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/main_event_subtitle"
                                android:textColor="#6C7A90"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 아래 행: 주요 부스 + 메뉴 추천 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_row"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/top_row"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.48">

                    <!-- 주요 부스 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_booth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toStartOf="@id/card_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="112dp"
                                android:src="@drawable/ic_main_calendar" />

                            <TextView
                                android:id="@+id/tv_booth_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/main_booth_title"
                                android:textColor="#243B5A"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_booth_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/main_booth_subtitle"
                                android:textColor="#6C7A90"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 메뉴 추천 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_menu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/card_booth"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.48">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="115dp"
                                android:layout_height="114dp"
                                android:src="@drawable/ic_main_coffee" />

                            <TextView
                                android:id="@+id/tv_menu_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/main_menu_title"
                                android:textColor="#243B5A"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_menu_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/main_menu_subtitle"
                                android:textColor="#6C7A90"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 캐릭터 + 말풍선: 화면 기준 오른쪽 하단 고정 -->
    <LinearLayout
        android:id="@+id/character_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:elevation="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 말풍선 + 텍스트 묶음 (위) -->
        <FrameLayout
            android:id="@+id/message_box_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 말풍선 배경 -->
            <ImageView
                android:id="@+id/message_box"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_main_massagebox"/>

            <!-- 말풍선 안 텍스트 (말풍선 정중앙) -->
            <TextView
                android:id="@+id/tv_chat_with_coai"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="코아이와 대화하기"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </FrameLayout>

        <!-- 코아이 캐릭터 (아래) -->
        <ImageView
            android:id="@+id/character"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_temibot"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
