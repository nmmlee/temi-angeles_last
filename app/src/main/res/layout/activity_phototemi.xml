<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="70dp">

        <TextView
            android:id="@+id/photo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Photo with Temi"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/photo_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="마음에 드는 템플릿을 골라보세요"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/horizontal_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/template_default"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:contentDescription="Default Template"
                        android:scaleType="fitXY"
                        android:src="@drawable/photo_template_default" />
                    <View
                        android:id="@+id/template_default_border"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:background="@drawable/blue_border"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/template_black"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:contentDescription="Black Template"
                        android:scaleType="fitXY"
                        android:src="@drawable/photo_template_black" />
                    <View
                        android:id="@+id/template_black_border"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:background="@drawable/blue_border"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/template_blue"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:contentDescription="Blue Template"
                        android:scaleType="fitXY"
                        android:src="@drawable/photo_template_blue" />
                    <View
                        android:id="@+id/template_blue_border"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:background="@drawable/blue_border"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/template_developer"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:contentDescription="Developer Template"
                        android:scaleType="fitXY"
                        android:src="@drawable/photo_template_developer" />
                    <View
                        android:id="@+id/template_developer_border"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:background="@drawable/blue_border"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/template_8bit"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:contentDescription="8bit Template"
                        android:scaleType="fitXY"
                        android:src="@drawable/photo_template_8bit" />
                    <View
                        android:id="@+id/template_8bit_border"
                        android:layout_width="240dp"
                        android:layout_height="500dp"
                        android:background="@drawable/blue_border"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/action_button"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0a0a0a"
            android:text="시작하기"
            android:textColor="#ffffff"
            android:textSize="36sp" />

    </LinearLayout>

    <!-- 뒤로가기 버튼 (맨 위 레이어) -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="58dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_back_button"
        android:contentDescription="뒤로가기"
        android:padding="4dp"
        android:src="@drawable/ic_main_backward"
        android:elevation="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>