<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PhotoTemiQrCodeActivity">

    <TextView
        android:id="@+id/qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:text="Photo with Temi"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qr_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_title"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="휴대폰으로 QR을 촬영해 이미지를 다운로드하세요"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/home_button"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:backgroundTint="#0a0a0a"
        android:textColor="#ffffff"
        android:text="메인으로 돌아가기" />

</RelativeLayout>
