<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9EEF3">

    <!-- 제목 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="주요 부스 안내"
        android:textColor="#1B7EF4"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- 선택한 필터 표시 -->
    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <!-- 필터 버튼들이 동적으로 추가됨 -->
    </LinearLayout>

    <!-- 결과 개수 표시 -->
    <TextView
        android:id="@+id/txtResultCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#243B5A"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:visibility="visible" />

    <!-- 결과 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBooths"
        android:layout_width="match_parent"
        android:layout_height="586dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="16dp"
        tools:listitem="@layout/item_booth_card" />

    <!-- 뒤로 가기 버튼 -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:backgroundTint="#2A7EF3"
        android:paddingHorizontal="48dp"
        android:paddingVertical="16dp"
        android:text="뒤로 가기"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

</LinearLayout>

