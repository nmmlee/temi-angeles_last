<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.temidummyapp">

    <!-- 카메라 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Porcupine Wake Word를 위한 오디오 녹음 권한 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 저장소 권한 (Android 9 이하에서 사진 저장 시 필요) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".TemiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TemiDummyApp"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- ✅ 앱의 시작 Activity 등록 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ 부스 검색 결과 Activity 등록 -->
        <activity
            android:name=".BoothResultsActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- ✅ 사진 찍기 관련 Activity 등록 -->
        <activity
            android:name=".PhotoTemi"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity
            android:name=".PhotoTemiFilmingActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity
            android:name=".PhotoTemiPictureSelectActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity
            android:name=".PhotoTemiResultActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity
            android:name=".PhotoTemiQrCodeActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- ✅ 메뉴 추천 Activity 등록 -->
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- ✅ 주요 부스 검색 Activity 등록 -->
        <activity
            android:name=".EventActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- ✅ GPT 채팅 Activity 등록 -->
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- ✅ QR 안내 Activity 등록 -->
        <activity
            android:name=".EventQRActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- ✅ Temi Skill 등록 (이 부분 추가) -->
        <meta-data
            android:name="com.robotemi.sdk.metadata.SKILL"
            android:value="@string/app_name" />

        <provider
            android:name="com.robotemi.sdk.TemiSdkContentProvider"
            android:enabled="true"
            android:exported="false"
            android:authorities="${applicationId}.com.robotemi.sdk" />

    </application>

</manifest>